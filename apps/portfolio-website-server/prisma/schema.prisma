datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Faq {
  answer    String?
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  question  String?
  updatedAt DateTime @updatedAt
}

model Testimonial {
  createdAt    DateTime @default(now())
  customerName String?
  feedback     String?
  id           String   @id @default(cuid())
  rating       Int?
  updatedAt    DateTime @updatedAt
}

model BlogPost {
  author        String?
  category      String?
  content       String?
  createdAt     DateTime  @default(now())
  id            String    @id @default(cuid())
  publishedDate DateTime?
  tags          String?
  title         String?
  updatedAt     DateTime  @updatedAt
}

model ContactMessage {
  createdAt DateTime  @default(now())
  email     String?
  id        String    @id @default(cuid())
  message   String?
  name      String?
  timestamp DateTime?
  updatedAt DateTime  @updatedAt
}

model Project {
  createdAt    DateTime @default(now())
  description  String?
  id           String   @id @default(cuid())
  image        Json?
  technologies String?
  title        String?
  updatedAt    DateTime @updatedAt
  url          String?
}

model User {
  createdAt DateTime @default(now())
  email     String?  @unique
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}
